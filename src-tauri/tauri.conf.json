{
  "package": {
    "productName": "Pixiv Powerful Viewer"
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**/*.jpg",
          "**/*.png",
          "**/*.gif",
          "**/*.webm",
          "**/*.webp",
          "**/*.apng",
          "**/*.txt"
        ]
      }
    },
    "windows": [
      {
        "title": "Pixiv Powerful Viewer",
        "width": 1000,
        "height": 650,
        "minWidth": 640,
        "minHeight": 320
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: https://asset.localhost"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "publisher": "fekoneko",
      "identifier": "com.fekoneko.ppv.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
